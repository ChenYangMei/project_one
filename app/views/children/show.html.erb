<div class="show">

  <div class="show_img">
    <%= cl_image_tag(@child.image, :gravity=>"face", :crop => "fill", :width => 400, :height => 400) %>
  </div>

  <div class="show_text">
    <ul>
      <li>Name:  <%= @child.name %></li>
      <li>Gender: <%= @child.gender %></li>
      <li>Date of Birth: <%= @child.dob %></li>
    </ul>
    <br>
    <p>Teacher(s):</p>
    <ul>
      <% @child.teachers.each do |t| %>
        <li><%= link_to(t.name, account_path(t.id)) %></li>
      <% end %>
    </ul>
    <p>Family Member(s):</p>
    <ul>
      <% @child.family_members.each do |f| %>
        <li><%= link_to(f.name, account_path(f.id)) %></li>
      <% end %>
    </ul>
    <br>
    <hr>
    <br>

    <% if @current_account.admin_or_teacher? %>
      <div class="controls">
        <p>
          <%= link_to("Edit #{@child.name} |", edit_child_path(@child))%>
          <%= link_to("Delete #{@child.name} |", child_path( @child.id ), :method => :delete, :data => {:confirm => "Are you sure to delete child #{@child.name}?"}) %>
          <%= link_to("All Children", children_path) %>
        </p>
      </div>
    <% end %>

  </div>


</div>
