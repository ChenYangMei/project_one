<% if @current_account.admin_or_teacher? %>
  <div class="index">
    <ul>
      <% @children.each do |c| %>
        <li>
          <%= cl_image_tag(c.image, :gravity=>"face", :crop => "fill", :width => 100, :height => 100) %>
          <%= link_to(c.name, child_path(c.id)) %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
